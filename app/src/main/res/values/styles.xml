<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionMenuTextColor">@android:color/holo_red_light</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>

        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="noAnimTheme" parent="android:Theme" tools:keep="@style/noAnimTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="MyTheme.AppCompat.Dialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
